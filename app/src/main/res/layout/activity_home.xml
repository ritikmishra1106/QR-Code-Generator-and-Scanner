<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity"
    android:background="@color/black_shade_1">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/qrcodesp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/logoHomeImg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoHomeImg"
        android:text="Welcome to QR Code Scanner and \n QR Code Generator"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:id="@+id/txtWelcome"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate QR Code"
        android:layout_below="@id/txtWelcome"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:background="@drawable/bg_button"
        android:id="@+id/btnGen"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR Code Scanner"
        android:layout_below="@id/btnGen"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:background="@drawable/bg_button"
        android:id="@+id/btnScan"/>


</RelativeLayout>